            {
                "$ref": "http://waml-schema.org/2.0/move-step-schema#"
            },
            {
                "$ref": "http://waml-schema.org/2.0/store-step-schema#"
            },
            {
                "$ref": "http://waml-schema.org/2.0/wait-step-schema#"
